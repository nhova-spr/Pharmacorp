<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="Profil"
        app:subtitle="Voici quelques unes de vos informations"
        app:subtitleTextColor="@color/White"
        app:titleTextColor="@color/White"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="65dp">

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvd"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="85dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/profpic"
                    android:layout_width="120dp"
                    android:layout_marginTop="-50dp"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_pic"
                    android:src="@drawable/def" />

                <TextView
                    android:id="@+id/shownames"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:text="Nom:  NHOVA-PX"
                    android:textSize="20dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                </TextView>
                <TextView
                    android:id="@+id/showmails"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:text="E-mail:  tuvwxyz@gmail.com"
                    android:layout_marginTop="155dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp">

                </TextView>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvd"
                android:layout_alignLeft="@+id/cvd"
                android:layout_alignRight="@+id/cvd"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="90dp"
                android:layout_marginTop="-25dp"
                android:layout_marginRight="40dp"
                android:elevation="10dp">

                <Button
                    android:id="@+id/logoutbtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_ui"
                    android:text="DÃ©connexion"
                    android:textSize="23dp"
                    android:textAllCaps="false"
                    android:textColor="@color/White" />
            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>

